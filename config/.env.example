# Beverly Knits ERP - Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=Beverly_Knits_ERP
APP_ENV=production
APP_DEBUG=false
APP_PORT=5006
APP_HOST=0.0.0.0

# Data Configuration
DATA_PATH=/mnt/c/finalee/beverly_knits_erp_v2/data/production
ARCHIVE_PATH=/mnt/c/finalee/beverly_knits_erp_v2/data/archive
CACHE_PATH=/mnt/c/finalee/beverly_knits_erp_v2/data/cache
SAMPLE_DATA_PATH=/mnt/c/finalee/beverly_knits_erp_v2/data/sample

# SharePoint Settings (for data sync)
SHAREPOINT_URL=https://beverlyknits-my.sharepoint.com
SHAREPOINT_FOLDER=/personal/psytz_beverlyknits_com/Documents/ERP%20Data
SHAREPOINT_SYNC_ENABLED=true
SHAREPOINT_SYNC_INTERVAL=86400  # 24 hours in seconds

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql
DATABASE_PATH=/mnt/c/finalee/beverly_knits_erp_v2/data/beverly_erp.db
# For PostgreSQL (if used)
# DATABASE_URL=postgresql://user:password@localhost:5432/beverly_erp
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=40

# Redis Cache (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ML/Forecasting Configuration
ML_CONFIDENCE_THRESHOLD=0.85
FORECAST_HORIZON_WEEKS=9
FORECAST_ACCURACY_TARGET=0.90
FORECAST_RETRAIN_SCHEDULE=weekly
FORECAST_RETRAIN_DAY=sunday
FORECAST_RETRAIN_HOUR=2

# Performance Settings
CACHE_TTL_YARN_INVENTORY=900  # 15 minutes
CACHE_TTL_SALES_ORDERS=300    # 5 minutes
CACHE_TTL_BOM=3600            # 60 minutes
MEMORY_LIMIT_MB=500           # Trigger GC above this
DATAFRAME_CHUNK_SIZE=10000

# API Settings
API_RATE_LIMIT=100  # Requests per minute
API_TIMEOUT=30      # Seconds
ENABLE_CORS=true
CORS_ORIGINS=*

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
ENABLE_LOGGING=true
LOG_LEVEL=INFO
LOG_FILE=/mnt/c/finalee/beverly_knits_erp_v2/logs/app.log

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ENABLED=false
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRY_HOURS=24

# Feature Flags
ENABLE_ML_FORECASTING=true
ENABLE_YARN_SUBSTITUTION=true
ENABLE_PRODUCTION_PLANNING=true
ENABLE_DATA_SYNC=true
ENABLE_UNIFIED_MCP=false
MOCK_ERP_DATA=false

# Development Settings (override in production)
DEV_MODE=false
HOT_RELOAD=false
DEBUG_SQL=false