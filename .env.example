# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=beverly_knits_erp
DB_USER=erp_user
DB_PASSWORD=erp_password

# API Configuration
API_PORT=5007
ERP_PORT=5006

# Data Paths
DATA_BASE_PATH=/mnt/c/Users/psytz/sc_data/ERP_Data

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Connection Pool
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20

# Environment
ENVIRONMENT=development
DEBUG=false

# ==============================
# eFab.ai API Integration
# ==============================

# API Authentication
EFAB_BASE_URL=https://efab.bkiapps.com
EFAB_USERNAME=your_username_here
EFAB_PASSWORD=your_password_here
EFAB_SESSION_TIMEOUT=3600

# API Settings
EFAB_API_ENABLED=false  # Set to true when credentials are configured
EFAB_ENABLE_FALLBACK=true
EFAB_ENABLE_CACHE=true
EFAB_ENABLE_MONITORING=true

# Retry Configuration
EFAB_RETRY_COUNT=3
EFAB_RETRY_DELAY=1.0
EFAB_RETRY_BACKOFF=2.0

# Circuit Breaker
EFAB_CIRCUIT_BREAKER_THRESHOLD=5
EFAB_CIRCUIT_BREAKER_TIMEOUT=60

# Performance Settings
EFAB_MAX_PARALLEL_REQUESTS=5
EFAB_CONNECTION_TIMEOUT=30
EFAB_READ_TIMEOUT=60

# Cache TTL Settings (seconds)
EFAB_CACHE_TTL_YARN=900        # 15 minutes
EFAB_CACHE_TTL_ORDERS=300      # 5 minutes
EFAB_CACHE_TTL_STYLES=3600     # 1 hour

# Monitoring (optional)
EFAB_METRICS_ENABLED=true
# EFAB_ALERT_WEBHOOK=https://your-webhook-url.com/alerts

# Encryption Key (auto-generated if not provided)
# EFAB_ENCRYPTION_KEY=your_base64_encoded_key_here