# Beverly Knits ERP v2 Docker Configuration
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/ ./src/
COPY data/ ./data/
COPY web/ ./web/
COPY config/ ./config/
COPY CLAUDE.md ./

# Create necessary directories
RUN mkdir -p /app/logs /app/cache /app/temp

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Set environment variables
ENV PYTHONPATH=/app
ENV FLASK_APP=src.core.beverly_comprehensive_erp
ENV ENV=production
ENV PORT=5006

# Expose port
EXPOSE 5006

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5006/health')" || exit 1

# Run application with gunicorn
CMD ["gunicorn", "--workers=4", "--bind=0.0.0.0:5006", "--timeout=120", "--worker-class=sync", "src.core.beverly_comprehensive_erp:create_app()"]
